/* pages/new/new.wxss */
.container>.title{
  display: flex;
  align-items: center;
  margin-top:2vh; 
}
input{
  border:1px solid lightgray;
  border-radius: 7px;
  height:4.5vh;
  text-align: center;
  padding:0 1vw;
}
.choice{
  margin-top:2vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
}
.choice>.title{
  font-size: 1.2em;
  text-align: center;
}
.add-one{
  display:flex;
  align-items: center;
  justify-content: space-between;
  margin-top:1.5vh;
}
.add-one>input{
  width:70%;
}
.add-one>button{
  width:20%;
  padding:0;
  font-size: 0.7em;
  height:4vh;
  line-height: 4vh;
  background:lightgreen;
}
.btn-group{
  display:flex;
  justify-content: space-between;
  width:80%;
  position:fixed;
  bottom:4vh;
}